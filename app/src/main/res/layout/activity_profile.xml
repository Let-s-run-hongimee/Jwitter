<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".hyuntae.profile">


    <View
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#1DA1F3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="400dp" >

        <TextView
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="팔로우 추천"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="트윗"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/posts_and_replies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="트윗과 답글"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"/>

        <TextView
            android:id="@+id/I_like_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="마음에 들어요"
            android:textColor="#000000"
            android:textSize="18dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/backbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle_background"
        android:clickable="true"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:src="@drawable/white_back_img"/>

    <ImageView
        android:id="@+id/searchbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle_background"
        android:clickable="true"
        android:padding="5dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:src="@drawable/search_img" />
    <ImageView
        android:id="@+id/lockerbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/circle_background"
        android:clickable="true"
        android:padding="5dp"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/locker_img" />
    <ImageView
        android:id="@+id/myprofile"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/profile_circle_background"
        android:clickable="true"
        android:padding="5dp"
        android:src="@drawable/profile_img" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:background="@drawable/white_button_border"
        android:text="프로필 수정"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_marginTop="150dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="홍민기"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="427dp" >

        <View
            android:id="@+id/follow_select"
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:background="@drawable/select_background"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"/>

        <View
            android:id="@+id/post_select"
            android:layout_width="44dp"
            android:layout_height="4dp"
            android:background="#ffffff"
            android:layout_weight="1" />

        <View
            android:id="@+id/posts_and_replies_select"
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:background="#ffffff"
            android:layout_weight="1"/>

        <View
            android:id="@+id/I_like_it_select"
            android:layout_width="114dp"
            android:layout_height="4dp"
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생일: 0000년 00월 00일"
        android:textColor="#787878"
        android:textSize="18dp"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/joinday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000년 00월에 가입함"
        android:textColor="#787878"
        android:textSize="18dp"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="50dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:src="@drawable/birthday_img"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔로잉"
        android:textColor="#787878"
        android:textSize="18dp"
        android:layout_marginTop="338dp"
        android:layout_marginLeft="55dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="338dp"
        android:text="팔로워"
        android:textColor="#787878"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textColor="#000000"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="115dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:src="@drawable/joinday_img"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="17dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C9C9C9"
        android:layout_marginTop="430dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" @30119"
        android:textColor="#787878"
        android:textSize="18dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:clickable="true"
        android:text="팔로우 추천"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="485dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:clickable="true"
            android:text="더 보기"
            android:textColor="#3B88B1"
            android:textSize="16dp"
            android:id="@+id/see_more"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#C9C9C9"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</FrameLayout>